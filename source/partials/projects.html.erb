<div class="row my-5">
  <div class="col-12">
    <div class="container">
      <div id="projects">
        <h2 class="title-h2"> Projects</h2>
        <div class="cards">
          <% data.projects.each do |project| %>
            <div class="card-product">
              <%= image_tag project.image, alt: "project image" %>
              <div class="card-product-infos">
                <div class="external-link">
                  <% link_to project.url, class: 'external-link', target: '_blank' do %>
                    <i class="fas fa-external-link-alt"></i>
                  <% end %>
                </div>
                <div>
                  <h2><%= project.name%></h2>
                </div>
                <p><%= project.description %></p>
                <p id="yml-description"><%= project.description2 %></p>
                <p id="main-tech">Tech: <%= project.tech %> </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
